<!doctype html>
<html>
  <head>
    <title>{{ page_title }}</title>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="description" content="{{ page_description | escape }}">
    <link rel="canonical" href="{{ canonical_url }}">
    <meta name="viewport" content="width=device-width,initial-scale=1,shrink-to-fit=no">
    <link
      rel="shortcut icon"
      href="{{'fevicon.png' | asset_url}}"
      type="image/x-icon"
    >
    {{ content_for_header }}
    <!-- Header hook for plugins -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    {{ 'app.css' | asset_url | stylesheet_tag }}
    <style>
      [x-cloak]{
        display: none; !important
      }
    </style>
    <style>
      /* Style range thumbs */
      .slider-thumb::-webkit-slider-thumb {
        appearance: none;
        height: 16px;
        width: 16px;
        border-radius: 50%;
        background: #7ed321;
        cursor: pointer;
        border: none;
        margin-top: -7px;
        z-index: 30;
        position: relative;
      }
      .slider-thumb::-moz-range-thumb {
        height: 16px;
        width: 16px;
        border-radius: 50%;
        background: #7ed321;
        cursor: pointer;
        border: none;
      }

      /* Hide default track background */
      .slider-thumb {
        background: none;
      }
    </style>
    <script async src="{{ 'application.js' | asset_url }}"></script>
  </head>
  <body>
    <div x-data="{cartDrawerOpen:false}" x-cloak>
      {% section 'header' %}
      {% unless request.path == routes.cart_url %}
        <div x-show="cartDrawerOpen">
          {% render 'cart-drawer', cart: cart %}
        </div>
      {% endunless %}
      {% unless request.path == routes.root_url
        or request.path == routes.account_login_url
        or request.path == routes.search_url
      %}
        {% section 'top' %}
      {% endunless %}

      <main role="main">
        {{ content_for_layout }}
      </main>
      <script defer src="https://unpkg.com/alpinejs@3.13.5/dist/cdn.min.js"></script>
      {% section 'footer' %}
    </div>
  </body>
</html>
