<div class="flex-1 flex-col items-center my-8">
  {% form 'contact' %}
    {% if form.errors %}
      <div class="border p-5 mb-4 bg-red-100 border-red-500 mx-3">
        <div class="flex flex-row items-center w-full mb-3">
          <div class="text-red-500">
            {% render 'icon-failed' %}
          </div>
          <div class="text-sm font-medium ml-3">
            Oh no! Your message was not posted
          </div>
        </div>
        <ul class="px-4 list-decimal">
          {% for error in form.errors %}
            <li class="text-xs">
              <span>{{ form.errors.messages[error] }}</span>
            </li>
          {% endfor %}
        </ul>
      </div>
    {% elsif form.posted_successfully? %}
      <div class="flex flex-row items-center w-full my-5 p-5 bg-green-100 border-green-500 mx-3">
        <div class="text-green-500">
          {% render 'icon-success' %}
        </div>
        <div class="text-sm font-medium ml-3">Message was submitted successfully!</div>
      </div>
    {% endif %}
    <div class="max-w-2xl mx-auto w-full bg-white rounded-lg shadow-md p-8">
      {% if section.settings.title != blank %}
        <h2 class="text-2xl font-bold text-gray-800 mb-6">{{ section.settings.title }}</h2>
      {% endif %}

      <div class="space-y-6">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <div class="space-y-2">
            <label for="contact_name" class="text-sm font-medium text-gray-700">Name</label>
            <input
              type="text"
              class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-primary-500 focus:border-primary-500 transition-colors"
              name="contact[name]"
              id="contact_name"
              placeholder="Your name">
          </div>

          <div class="space-y-2">
            <label for="contact_email" class="text-sm font-medium text-gray-700">Email Address</label>
            <input
              type="email"
              name="contact[email]"
              class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-primary-500 focus:border-primary-500 transition-colors"
              id="contact_email"
              placeholder="your.email@example.com">
          </div>
        </div>

        <div class="space-y-2">
          <label for="contact_message" class="text-sm font-medium text-gray-700">Message</label>
          <textarea
            name="contact[body]"
            id="contact_message"
            rows="5"
            class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-primary-500 focus:border-primary-500 transition-colors"
            placeholder="How can we help you?"></textarea>
        </div>

        <div>
          <button type="submit" class="w-full md:w-auto px-6 py-3 bg-blue-500 text-white font-medium rounded-md hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-primary-500 focus:ring-offset-2 transition-colors">
            Submit Message
          </button>
        </div>
      </div>
    </div>
  {% endform %}
</div>
{% schema %}
  {
    "name": "Contact Form",
    "presets": [
      {
        "name": "Contact Form"
      }
    ],
    "settings": [
      {
        "type": "text",
        "id": "title",
        "label": "Title"
      }
    ]
  }
{% endschema %}