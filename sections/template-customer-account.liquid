<div class="max-w-2xl mx-auto py-12 px-4 sm:py-16 sm:px-6 lg:max-w-7xl lg:px-8">
  <h1 class="text-2xl font-bold text-gray-800 mb-6">Account</h1>
  <div class="grid md:grid-cols-4 gap-8">
    <div class="md:col-span-3">
      {% assign number_of_orders = customer.orders | size %}
      {% if number_of_orders > 0 %}
        <div class="mb-8">
          <h2 class="text-xl font-bold text-gray-800 pb-1 border-b border-gray-200">Order History</h2>
          {% paginate customer.orders by 10 %}
            <div class="mt-6 grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
              {% for order in customer.orders %}
                <div class="group bg-white rounded-lg overflow-hidden shadow-sm hover:shadow transition duration-200 hover:-translate-y-1">
                  <div class="aspect-w-1 aspect-h-1 bg-gray-200 overflow-hidden">
                    {% if order.line_items.first.image %}
                      <img
                        src="{{ order.line_items.first.image | image_url: width: 400 }}"
                        alt="{{ order.line_items.first.image.alt }}"
                        class="w-full h-full object-cover transition duration-300 group-hover:scale-105"
                        loading="lazy"
                        width=""
                        height="">
                    {% else %}
                      {{ 'product-1' | placeholder_svg_tag: 'w-full h-full object-cover opacity-75 group-hover:opacity-100 transition duration-300' }}
                    {% endif %}
                  </div>
                  <div class="p-4">
                    <div class="flex justify-between items-start mb-2">
                      <h3 class="text-sm font-medium text-gray-800 group-hover:text-gray-600 transition">
                        <a href="{{ order.customer_url }}">{{ order.name }}</a>
                      </h3>
                      <span class="text-xs px-2 py-0.5 bg-gray-700 text-white rounded-full">
                        {{ order.fulfillment_status_label }}
                      </span>
                    </div>
                    <div class="flex justify-between text-sm">
                      <span class="text-gray-500">{{ order.financial_status_label }}</span>
                      <span class="font-medium">{{ order.total_price | money }}</span>
                    </div>
                  </div>
                </div>
              {% endfor %}
            </div>
            {% if paginate.pages > 1 %}
              <div class="flex justify-center mt-8 border-t border-gray-200 pt-4">
                <nav class="flex items-center space-x-1">
                  {% if paginate.previous %}
                    <a href="{{ paginate.previous.url }}" class="p-2 text-gray-500 hover:text-gray-700 hover:bg-gray-100 rounded transition">
                      &larr;
                    </a>
                  {% endif %}
                  {% for part in paginate.parts %}
                    {% if part.is_link %}
                      <a href="{{ part.url }}" class="px-3 py-1 text-gray-500 hover:text-gray-800 hover:bg-gray-100 rounded transition">
                        {{ part.title }}
                      </a>
                    {% elsif part.title == paginate.current_page %}
                      <span class="px-3 py-1 bg-gray-100 text-gray-800 font-medium rounded">
                        {{ part.title }}
                      </span>
                    {% else %}
                      <span class="px-3 py-1 text-gray-400">
                        {{ part.title }}
                      </span>
                    {% endif %}
                  {% endfor %}
                  {% if paginate.next %}
                    <a href="{{ paginate.next.url }}" class="p-2 text-gray-500 hover:text-gray-700 hover:bg-gray-100 rounded transition">
                      &rarr;
                    </a>
                  {% endif %}
                </nav>
              </div>
            {% endif %}
          {% endpaginate %}
        </div>
      {% else %}
        <div class="flex items-center justify-center h-64 bg-gray-50 rounded-lg border border-gray-100">
          <p class="text-gray-500 text-center">
            You currently don't have any orders
          </p>
        </div>
      {% endif %}
    </div>
    <div class="md:col-span-1">
      <h2 class="text-xl font-bold text-gray-800 pb-1 border-b border-gray-200 mb-4">Account Details</h2>
      <div class="bg-gray-50 p-4 rounded-lg hover:bg-white hover:shadow-sm transition duration-200">
        {{ customer.default_address | format_address }}

        <a href="{{ routes.account_addresses_url }}" class="mt-4 inline-flex items-center text-sm text-blue-600 hover:text-blue-800 transition group">
          View addresses
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="h-4 w-4 ml-1 transform transition group-hover:translate-x-1 stroke-lime-500"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor">
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M9 5l7 7-7 7" />
          </svg>
        </a>
      </div>
    </div>
  </div>
</div>