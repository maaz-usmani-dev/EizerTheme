<div class="flex gap-4 flex-col">
  <div class="p-6 bg-[#fafafa] rounded-lg">
    <!-- Search Box -->
    <form action="/search" method="get" class="mb-6">
      <input type="hidden" name="type" value="article">
      <div class="flex flex-col gap-4">
        <input
          type="text"
          name="q"
          placeholder="Search Keyword"
          class="w-full px-6 py-4 border border-gray-300 rounded-md focus:outline-none"
        >
        <button
          type="submit"
          class="bg-lime-500 border border-transparent text-white px-6 py-2 uppercase font-medium rounded-md hover:text-lime-500 hover:bg-transparent hover:border-lime-500"
        >
          Search
        </button>
      </div>
    </form>
  </div>
  <!-- Blog Categories with Counts -->
  <div class="p-6 bg-[#fafafa] rounded-lg">
    <div class="bg-[#f9f9f9] p-4 rounded-md">
      <h3 class="text-xl font-semibold mb-4">Category</h3>
      <ul class="space-y-3">
        {% assign tags = blog.all_tags %}
        <ul class="space-y-3">
          {% for tag in tags %}
            {% assign count = 0 %}
            {% for article in blog.articles %}
              {% if article.tags contains tag %}
                {% assign count = count | plus: 1 %}
              {% endif %}
            {% endfor %}
            <li class="flex justify-between items-center text-gray-600 hover:text-lime-500">
              <a href="{{ blog.url }}/tagged/{{ tag | handle }}">
                {{ tag }}
              </a>
              <span class="text-sm text-gray-400">({{ count }})</span>
            </li>
          {% endfor %}
        </ul>
      </ul>
    </div>
  </div>
</div>
